let mapleader = 'z'
set ignorecase
set number
set relativenumber
set incsearch


" ===== vim 介面設定 ===================================

set scrolloff=5 " default 0     "螢幕上下移動時保留可見行數
"set timeoutlen=300


nnoremap <leader>f :action ReformatCode<CR>:w<CR>
nnoremap <leader>ra :action Run<CR>
nnoremap <leader>rt :action SearchEverywhere<CR>
nnoremap <leader>ro :action Move<CR>
nnoremap <leader>rf :action IntroduceField<CR>
nnoremap \s :action ChangeSignature<CR>
nnoremap <leader>cd v{y}po<esc>?def<CR>f_l
nnoremap <leader>cc /"<cr>lci"
nnoremap <leader>n T.
nnoremap <leader>ri :action Inline<CR>
nnoremap M :action ExtractMethod<CR>
nnoremap <leader>rp :action IntroduceParameter<CR>
nnoremap <leader>rv :action IntroduceVariable<CR>
nnoremap <leader>rs :action SurroundWith<CR>


imap <a-.> self.
map <a-.> aself.

 map   <leader>rr  :action RenameElement<CR>
nnoremap <leader>gc :action GotoClass<CR>

" create a instance of object
nnoremap <a-;> yiwPa = <esc>^~

set easymotion



